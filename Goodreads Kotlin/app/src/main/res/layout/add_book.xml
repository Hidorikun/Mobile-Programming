<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="wrap_content"
                                             android:layout_height="wrap_content">

    <Button
            android:text="Cancel"
            android:layout_width="116dp"
            android:layout_height="50dp"
            android:id="@+id/btn_cancel" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_description"
            app:layout_constraintStart_toStartOf="@+id/txt_description"
            android:layout_marginBottom="24dp" app:layout_constraintBottom_toBottomOf="parent"
    />
    <Button
            android:text="Add"
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:id="@+id/btn_add"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_description"
            app:layout_constraintEnd_toEndOf="@+id/txt_description"
            app:layout_constraintStart_toEndOf="@+id/btn_cancel"
            android:layout_marginLeft="24dp" android:layout_marginStart="24dp" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <EditText
            android:layout_width="266dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="Description"
            android:ems="10"
            android:id="@+id/txt_description"
            app:layout_constraintStart_toStartOf="@+id/txt_name" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_name"/>
    <EditText
            android:layout_width="266dp"
            android:layout_height="44dp"
            android:inputType="textPersonName"
            android:hint="Title"
            android:ems="10"
            android:id="@+id/txt_name"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/lbl_add_book" android:layout_marginEnd="24dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginRight="24dp"
            android:layout_marginStart="24dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="24dp"/>
    <TextView
            android:text="Add a book"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lbl_add_book"
            tools:textSize="36sp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_name"/>
</android.support.constraint.ConstraintLayout>